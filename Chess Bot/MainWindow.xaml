<Window x:Class="ChessBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chess Game" Height="650" Width="600"
        Background="#2C2C2C">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1E1E1E" Padding="15">
            <StackPanel>
                <TextBlock x:Name="TurnLabel" 
                          Text="White to move" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock x:Name="StatusLabel" 
                          Text="" 
                          FontSize="14" 
                          Foreground="#FFA500"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="#2C2C2C" Padding="20">
            <Viewbox>
                <Grid Width="600" Height="600">
                    <UniformGrid x:Name="ChessBoard" 
                               Rows="8" 
                               Columns="8"/>
                </Grid>
            </Viewbox>
        </Border>

        <Border Grid.Row="2" Background="#1E1E1E" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="NewGameButton" 
                       Content="New Game" 
                       Width="100" 
                       Height="35"
                       Margin="5"
                       Background="#4CAF50"
                       Foreground="White"
                       FontWeight="Bold"
                       BorderThickness="0"
                       Click="NewGame_Click"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#4CAF50"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5"
                                               Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45A049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="UndoButton" 
                       Content="Undo" 
                       Width="100" 
                       Height="35"
                       Margin="5"
                       Background="#FF9800"
                       Foreground="White"
                       FontWeight="Bold"
                       BorderThickness="0"
                       Click="Undo_Click"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF9800"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5"
                                               Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E68900"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>